<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:id="@+id/text_date_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text_type_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_below="@id/date_comment"/>
        <TextView
            android:id="@+id/text_user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realizado por:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_below="@id/type_comment"/>
        <TextView
            android:id="@+id/text_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentario lkkasf lkadfl adkfmad lgkfjajd"
            android:paddingTop="8dp"
            android:layout_below="@id/user_comment"/>
        <TextView
            android:id="@+id/date_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toEndOf="@id/text_date_comment"
            android:paddingStart="8dp"/>
        <TextView
            android:id="@+id/type_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_below="@id/text_date_comment"
            android:layout_toEndOf="@id/text_type_comment"
            android:paddingStart="8dp"/>
        <TextView
            android:id="@+id/user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_below="@id/text_type_comment"
            android:layout_toEndOf="@id/text_user_comment"
            android:paddingStart="8dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />



</LinearLayout>